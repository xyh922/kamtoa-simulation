<!--
    ROS navigation stack with velocity smoother
-->
<launch>
  <!-- <include file="$(find kamtoa_navigation)/launch/velocity_smoother.launch.xml"/> to higher level -->

  <arg name="name" default=""/>
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_link"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odom" />
  <arg name="laser_topic" default="scan" />
  <arg name="robot" default="som_o" />


  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/costmap/only_global_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/costmap/only_local_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/costmap/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/costmap/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/planner/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/move_base_params.yaml" command="load" />

    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/planner/global_planner_params.yaml" command="load" />
    <rosparam file="$(find kamtoa_navigation)/param/$(arg robot)/planner/navfn_global_planner_params.yaml" command="load" />

    <!-- external params file that could be loaded into the move_base namespace -->
    <!--rosparam file="$(arg custom_param_file)" command="load" /-->

    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

    <!-- (OUTPUT) from move_base cmd_vel now mapped to velocity_smoother -->
    <remap from="cmd_vel" to="/navigation_raw_cmd_vel"/>

    <!-- odometry and laser_scan topics mapping -->
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>
</launch>
