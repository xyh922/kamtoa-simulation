<?xml version="1.0"?>
<launch>
  <node pkg="nodelet" type="nodelet" name="navigation_velocity_smoother" args="load yocs_velocity_smoother/VelocitySmootherNodelet /nav_nodelet_manager">
    <rosparam file="$(find hg_robot_2dnav)/param/omnibot/smoother.yaml" command="load"/>

    <!-- input -->
    <!-- remap from="navigation_velocity_smoother/raw_cmd_vel" to=""/-->
    
    <!-- Robot velocity feedbacks; use the default base configuration -->
    <remap from="navigation_velocity_smoother/odometry" to="/odom"/>
    <!--remap from="navigation_velocity_smoother/robot_cmd_vel" to="/cmd_vel"/-->
    
    <!-- result -->
    <remap from="navigation_velocity_smoother/smooth_cmd_vel" to="/cmd_vel"/>

    
  </node>
</launch>